<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydeenoble.alat.LoginSignUpActivity"
    android:orientation="vertical"
    android:padding="40dp">

    <ImageView
        android:id="@+id/twenty_four_hour_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twenty_four_hour_support_copy_2"
        android:layout_gravity="end"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/alat_coloured_copy_3"
        android:layout_gravity="center"
        android:layout_weight="2"/>


    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorWhite"
        android:background="@drawable/rounded_corners"
        android:textColor="@color/colorScarlet"
        android:textSize="16sp"
        android:padding="20dp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textSize="14sp"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="21.3sp"
        android:textColor="@color/colorWhite"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"/>
</LinearLayout>
